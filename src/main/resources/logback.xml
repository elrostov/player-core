        </appender>

        <appender name="FileError" class="ch.qos.logback.core.FileAppender">
            <file>/home/vitandr/Logs/AdminRestController/error.log</file>
            <encoder>
                <pattern>%d{YY/MM/DD HH:mm:ss} %-5level %logger{40}.%M - %msg%n</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
