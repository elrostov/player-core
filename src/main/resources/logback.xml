<?xml version="1.0" encoding="UTF-8"?>
<configuration version="1.0" name="LoggingConf">

    <appender name="Console-Appender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %highlight(%-5level) %magenta([%logger{30}.%M]) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="AdminAuthorRestController" level="info" additivity="true">
        <appender name="FileInfo" class="ch.qos.logback.core.FileAppender">
            <file>/home/vitandr/Logs/AdminAuthorRestController/info.log</file>
            <encoder>
                <pattern>%d{YY/MM/DD HH:mm:ss} %-5level %logger{40}.%M - %msg%n</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter" level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
        </appender>

        <appender name="FileWarn" class="ch.qos.logback.core.FileAppender">
